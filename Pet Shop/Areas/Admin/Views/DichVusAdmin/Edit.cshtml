@model Pet_Shop.Models.DichVu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin_PetShop.cshtml";
}
<form action="@Url.Action("Edit")" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dịch vụ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDV)

        <div class="form-group-flex-none">
            <div class="group-left">
                <div class="form-group">
                    @Html.LabelFor(model => model.TenDV, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DoiTuongKD.DonGia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DoiTuongKD.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DoiTuongKD.DonGia, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.DoiTuongKD.GiamGia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DoiTuongKD.GiamGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DoiTuongKD.GiamGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group form-group-area">
                    @Html.LabelFor(model => model.DoiTuongKD.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DoiTuongKD.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DoiTuongKD.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group form-group-area">
                    @Html.LabelFor(model => model.DoiTuongKD.ChiTiet, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DoiTuongKD.ChiTiet, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DoiTuongKD.ChiTiet, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <div class="group-right">
                <div class="form-group form-group-flex">
                    @Html.LabelFor(model => model.DoiTuongKD.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.DoiTuongKD.TrangThai)
                            @Html.ValidationMessageFor(model => model.DoiTuongKD.TrangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group form-group-flex">
                    @Html.LabelFor(model => model.DoiTuongKD.AnhDaiDien, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.TextBoxFor(model => model.ImgUpLoad, new { type = "file" })*@
                        <img id="preview" src="@Url.Content(Model.DoiTuongKD.AnhDaiDien)" width="150" height="100" class="hidden" />
                        <input type="file" name="file" id="file" required class="form-control" accept=".png, .jpg, .jpeg" />
                        @*<input type="button" id="btnUpload" value="Upload Files" />*@
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Trở về danh sách", "Index")
    </div>
</form>