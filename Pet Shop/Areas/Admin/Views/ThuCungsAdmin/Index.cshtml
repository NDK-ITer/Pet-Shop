@model PagedList.IPagedList<Pet_Shop.Models.ThuCung>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin_PetShop.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.TenTC)*@Tên thú cưng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GioiTinh)*@Giới tính
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.KichCo)*@Kích cở
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TiemPhong)*@Tiêm phòng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DoiTuongKD.MoTa)*@Mô tả
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.LoaiThuCung.TenLoai)*@Tên loài
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Hình ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KichCo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiemPhong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoiTuongKD.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiThuCung.TenLoai)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DoiTuongKD.ChiTiet)
            </td>
            <td>
                <img src="@Url.Content(item.DoiTuongKD.AnhDaiDien)" width="50%" height="50%" />
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTC }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTC }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTC })
            </td>



        </tr>
    }
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
